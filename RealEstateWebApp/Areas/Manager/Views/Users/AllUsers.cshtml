@using RealEstateWebApp.Areas.Manager.Models.Users

@model IEnumerable<AllUsersViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>All Users</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <partial name="_StyleSheetsPartial" />

</head>

<body>
    <partial name="_TopNavPartial" />

    <div class="card">
        <div class="card-header">
            <h3>Registered users: @Model.Count()</h3>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                int i = 1;

                foreach (var user in Model)
                {
                    <h5 class="card-title">@i. ID: @user.Id | Email: @user.UserName</h5>
                    <div class="card-footer">
                    </div>
                    i += 1;
                }
                <a asp-action="AllRoles" asp-controller="Roles" class="btn btn-primary" style="width:auto">Manage Roles</a>
            }
            else
            {
                <h5 class="card-title">There are no registered users</h5>
            }
        </div>
    </div>
</body>
</html>
