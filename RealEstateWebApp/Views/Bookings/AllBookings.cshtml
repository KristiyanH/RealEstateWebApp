@using RealEstateWebApp.ViewModels.Bookings
@model IEnumerable<AllBookingsViewModel>

@{
    ViewData["Title"] = "Bookings";
}

@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto"
   asp-controller="Roles" asp-action="CreateRole">
        Create New Role
    </a>

    foreach(var booking in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <h4>Booking ID: @booking.BookingId</h4>
                <h4>Property ID: @booking.PropertyId</h4>
                <h4>Visit Date: @booking.VisitDate</h4>
            </div>
            <div class="card-body">
               <h3>Client Details</h3>
               <h6>Full Name: @booking.ClientFullName</h6> 
               <h6>Email Address: @booking.ClientEmail</h6> 
               <h6>Phone Number: @booking.ClientPhoneNumber</h6> 
               <h6>Note: @booking.Description</h6> 
            </div>
            <div class="card-footer">
                <form asp-action="DeleteBooking" asp-route-id="@booking.BookingId" method="post">
                <a class="btn btn-primary" asp-action="EditBooking" asp-controller="Bookings" asp-route-id="@booking.BookingId">Edit</a>

                <span id="confirmDeleteSpan_@booking.BookingId" style="display:none">
                    <span>Are you sure you want to delete this booking?</span>
                    <button type="submit" class="btn btn-primary">Yes</button>
                    <a href="#" class="btn btn-danger"
                    onclick="confirmDelete('@booking.BookingId', false)">No</a>
                </span>

                <span id="deleteSpan_@booking.BookingId">
                    <a href="#" class="btn btn-danger"
                    onclick="confirmDelete('@booking.BookingId', true)">Delete</a>
                </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            There are no active bookings.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Choose a property and create your booking for free.
            </h5>
        </div>
    </div>
    <a class="btn btn-primary" style="width:auto"
   asp-controller="Properties" asp-action="All">
        See Properties
    </a>
}

@section Scripts{
    <script src="~/js/customScripts/CustomScript.js"></script>
}