@using RealEstateWebApp.ViewModels.Bookings

@model BookVisitFormModel

@{
    ViewData["Title"] = "Book a Visit";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-7">
        <h2 class="heading-margin text-center">Book your Visit</h2>

        <form method="post">
  <div class="form-group">
    <label asp-for="FullName"></label>
    <input asp-for="FullName" class="form-control" placeholder="e.g: Kristiyan Hristov..">
    <span asp-validation-for="FullName" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control" placeholder="Leave a note..">
    <span asp-validation-for="Description" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" placeholder="e.g: kristiyanhristov@gmail.com">
    <span asp-validation-for="Email" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="VisitDate"></label>
    <input asp-for="VisitDate" class="form-control" placeholder="DD.MM.YYYY HH:MM">
    <span asp-validation-for="VisitDate" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" placeholder="0899999999">
    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
  </div>

  <input class="btn btn-primary" type="submit" value="Save" />
</form>
    </div>
</div>