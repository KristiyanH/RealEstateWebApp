@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@if (!Model.Properties.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the Number 1 Real Estate Agency</h1>
        <p class="lead">We don't have any properties in the system right now but feel free to add yours!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Properties" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Property</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for(int i = 0; i < Model.Properties.Count; i++)
        {
            var property = Model.Properties[i];

            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
            <img class="d-block w-100" src="@property.ImageUrl" alt="@property.Description @property.Price€" height="720">
            <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-info" asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id">@property.Description @property.Price.ToString("f3")€</a></h5>
            </div>
        </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-12 text-center">
            @Model.TotalProperties Available Properties
        </h2>
    </div>
</div>

@section Scripts{
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
}

