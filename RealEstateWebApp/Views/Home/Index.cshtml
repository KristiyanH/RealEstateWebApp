@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@{
    var properties = Model.Properties;

    var firstProperty = properties.Any() ? properties[0] : null;
    var secondProperty = properties.Count > 1 ? properties[1] : null;
    var thirdProperty = properties.Count > 2 ? properties[2] : null;
}

@if (!properties.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the Number 1 Real Estate Agency</h1>
        <p class="lead">We don't have any properties in the system right now but feel free to add yours!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Properties" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Property</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if(firstProperty != null)
        {
             <div class="carousel-item active">
            <img class="d-block w-100" src="@firstProperty.ImageUrl" alt="@firstProperty.Description @firstProperty.Price€">
            <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-info" asp-controller="Properties" asp-action="Details" asp-route-id="@firstProperty.Id">@firstProperty.Description @firstProperty.Price.ToString("f3")€</a></h5>
            </div>
        </div>
        }
        @if(secondProperty != null)
        {
             <div class="carousel-item">
            <img class="d-block w-100" src="@secondProperty.ImageUrl" alt="@secondProperty.Description @secondProperty.Price€">
            <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-info" asp-controller="Properties" asp-action="Details" asp-route-id="@secondProperty.Id">@secondProperty.Description @secondProperty.Price.ToString("f3")€</a></h5>
            </div>
        </div>
        }

         @if(thirdProperty != null)
        {
             <div class="carousel-item">
            <img class="d-block w-100" src="@thirdProperty.ImageUrl" alt="@thirdProperty.Description @thirdProperty.Price€">
            <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-info" asp-controller="Properties" asp-action="Details" asp-route-id="@thirdProperty.Id">@thirdProperty.Description @thirdProperty.Price.ToString("f3")€</a></h5>
            </div>
        </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-12 text-center">
            @Model.TotalProperties Available Properties
        </h2>
    </div>
</div>

