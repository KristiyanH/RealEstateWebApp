@model SetManagerToEmployeeFormModel;

@{
    ViewData["Title"] = "Set Manager To Employee";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-7">
        <h2 class="heading-margin text-center">Manager Setting</h2>

        <form method="post">
  <div class="form-group">
    <label asp-for="ManagerId"></label>
    <input asp-for="ManagerId" class="form-control" placeholder="The Manager's ID">
    <span asp-validation-for="ManagerId" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="EmployeeId"></label>
    <input asp-for="EmployeeId" class="form-control" placeholder="The employee's ID">
    <span asp-validation-for="EmployeeId" class="small text-danger"></span>
  </div>

  <input class="btn btn-primary" type="submit" value="Save" />
</form>
    </div>
</div>
