@model AddPropertyViewModel

@{
    ViewData["Title"] = "Add Property";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-7">
        <h2 class="heading-margin text-center">Add Property</h2>

        <form method="post">
  <div class="form-group">
    <label asp-for="ImageUrl"></label>
    <input asp-for="ImageUrl" class="form-control" placeholder="Link to property image">
    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control" placeholder="Property Description">
    <span asp-validation-for="Description" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="BuildingYear"></label>
    <input asp-for="BuildingYear" class="form-control" placeholder="@DateTime.UtcNow.Year">
    <span asp-validation-for="BuildingYear" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Floor"></label>
    <input asp-for="Floor" class="form-control" placeholder="Property floor (1,2,3..)">
    <span asp-validation-for="Floor" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="SquareMeters"></label>
    <input asp-for="SquareMeters" class="form-control" placeholder="Property Floor Space">
    <span asp-validation-for="SquareMeters" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control" placeholder="Property Price">
    <span asp-validation-for="Price" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="AddressText"></label>
    <input asp-for="AddressText" class="form-control" placeholder="The property address">
    <span asp-validation-for="AddressText" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="PropertyTypeId"></label>
    <select asp-for="PropertyTypeId" class="form-control" >
        @foreach (var type in Model.PropertyTypes)
        {
            <option value="@type.Id">@type.Name</option>
        }
    </select>
    <span asp-validation-for="BuildingYear" class="small text-danger"></span>
  </div>

  <input class="btn btn-primary" type="submit" value="Save" />
</form>
    </div>
</div>