@model ErrorViewModel

@if(ViewData["ErrorTitle"] == null)
{
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>
    <h5>Please contact us on cTech@gmail.com</h5>
}
else
{
    <!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Error</title>

	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,900" rel="stylesheet">

	<link type="text/css" rel="stylesheet" href="~/ErrorTemplate/css/style.css" />


</head>

<body>
	<div id="notfound">
		<div class="notfound">
			<div class="notfound-404">
				<h1>Oops!</h1>
			</div>
			<h2>404 - Page not found</h2>
			<h5>@ViewData["ErrorMessage"]</h5>
			<a asp-controller="Home" asp-action="Index">Go To Homepage</a>
		</div>
	</div>
			
</body>

</html>
}

