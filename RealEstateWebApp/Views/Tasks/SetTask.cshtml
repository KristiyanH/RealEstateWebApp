@model SetTaskFormModel;

<!DOCTYPE html>
<html>
<head>
    <title>Set Task</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <partial name="_StyleSheetsPartial" />

</head>

<body>
    <partial name="_TopNavPartial" />

    <form method="post">
        <div class="form-group">
            <h2 class="heading-margin text-center">Set Task</h2>
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" placeholder="What should the employee do?">
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserId"></label>
            <input asp-for="UserId" class="form-control" placeholder="The employee ID">
            <span asp-validation-for="UserId" class="small text-danger"></span>

        </div>
        <input class="btn btn-primary" type="submit" value="Save" />

    </form>

</body>
</html>