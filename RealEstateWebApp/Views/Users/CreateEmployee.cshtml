@model BecomeEmployeeFormModel

@{
    ViewData["Title"] = "Employee Registration";
}


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-7">
        <h2 class="heading-margin text-center">Employee Registration</h2>

        <form method="post">
  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" placeholder="Your full name here">
    <span asp-validation-for="Name" class="small text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" placeholder="Your phone number here">
    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
  </div>

  <input class="btn btn-primary" type="submit" value="Save" />
</form>
    </div>
</div>
